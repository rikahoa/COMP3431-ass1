<launch>
    <param name="/use_sim_time" value="false"/>
    <include file="$(find ass1)/beacons.launch"/>

    <node pkg="crosbot_ogmbicp" type="crosbot_ogmbicp" name="icp">
        <rosparam>
            odom_frame: /odom
        </rosparam>
    </node>

    <node pkg="crosbot_ui" type="gui" name="slam" 
        args="$(find comp3431)/launch/crosbot-fastslam.gui" >
    </node>

    <node name="odom" pkg="ass1" type="odom" output="screen" />
    <node name="beacon_finder" pkg="ass1" type="beacon_finder" output="screen">
        <rosparam>
            colour_ranges:
                pink:
                    h_low: 130
                    h_hi: 170
                    s: 90
                    v: 90
                blue:
                    h_low: 91 
                    h_hi: 120
                    s: 50
                    v: 50
                green:
                    h_low: 70
                    h_hi: 100
                    s: 140
                    v: 50
                yellow:
                    h_low: 20
                    h_hi: 40
                    s: 120
                    v: 50
        </rosparam>
    </node>
</launch>
